# When only laptop screen
profile undocked {
    output eDP-1 enable mode 1920x1080@60 position 0,0
    exec pkill -x quickshell; qs -c noctalia-shell &
}

# When any external monitor is connected via HDMI
profile docked-hdmi {
    output eDP-1 disable
    output HDMI-A-* enable position 0,0
    exec pkill -x quickshell; qs -c noctalia-shell &
}

# When any external monitor is connected via DisplayPort
profile docked-dp {
    output eDP-1 disable
    output DP-* enable position 0,0
    exec pkill -x quickshell; qs -c noctalia-shell &
}

# When any external monitor is connected via USB-C/DisplayPort Alt
profile docked-usbc {
    output eDP-1 disable
    output USB-C-* enable position 0,0
    exec pkill -x quickshell; qs -c noctalia-shell &
}
